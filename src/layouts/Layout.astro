---
import Header from "../components/Header.astro";

//FUENTES DE FONTSOURCE
import "@fontsource/hind-vadodara/300.css";
import "@fontsource/hind-vadodara/400.css";
import "@fontsource/hind-vadodara/500.css";
import "@fontsource/hind-vadodara/600.css";
import "@fontsource/hind-vadodara/700.css";
import Footer from "../components/Footer.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>



	<body>
 <!-- BACKGROUND GRADIENT DIV -->
		<div
			class="absolute inset-0 -z-10 h-full w-full items-center px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]"></div>
 <!-- HEADER NAV -->
			<Header />
		<slot />


 <!-- FOOTER -->
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		color-scheme: light dark;
	}

	html {
		font-family: "Hind Vadodara", system-ui, sans-serif;
	}

	body {
		background: #050505;
		display: flex;
		flex-direction: column;
		justify-content: center;
		min-height: 100vh;
	}
</style>
